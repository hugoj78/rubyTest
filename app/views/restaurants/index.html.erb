<h1>Restaurants</h1>

<table>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
      <td><%= button_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant), method: 'get'%></td>
      <td><%= button_to "Remove", restaurant_path(restaurant), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
   </tr>
  <% end %>
   
</table>
<br>
<%= button_to 'Add a New Restaurant', new_restaurant_path, method: 'get'%>
<br>
<%= button_to 'Top Restaurants', top_restaurants_path, method: 'get' %>